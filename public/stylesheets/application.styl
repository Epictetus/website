border-image()
  -webkit-border-image arguments
  -moz-border-image arguments
  border-image arguments

border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

box-shadow()
  -webkit-box-shadow arguments
  -moz-box-shadow arguments
  box-shadow arguments

small = 14px
medium = 18px
large = 24px
x-large = 34px
xx-large = 64px
xxx-large = 92px

@font-face
  font-family "04b_03"
  src url('/fonts/04b_03__-webfont.eot')
  src url('/fonts/04b_03__-webfont.eot?iefix') format('eot'), url('/fonts/04b_03__-webfont.woff') format('woff'), url('/fonts/04b_03__-webfont.ttf') format('truetype'), url('/fonts/04b_03__-webfont.svg#webfontiFL0wwqh') format('svg')
  font-weight normal
  font-style normal
  font-size medium

header, footer, nav
  display block
time
  display inline

body, input
  font-family 'VT323', monospace
  font-size medium

h1, h2, h3, h4, h5, h6
  font-family '04b_03', monospace
  margin-bottom 0

body
  text-align center
  background hsl(200, 30%, 95%) url('/images/noise.png') repeat
  text-shadow 0px 1px 0px hsla(0, 100%, 100%, 0.6)
  overflow scroll

a:link, a:visited
  color hsl(200, 30%, 60%)

a img
  border 0

button, input[type=submit], a.button
  font-size large
  border solid 1px hsla(0, 0%, 0%, 0.2)
  background-color hsl(200, 30%, 60%)
  background hsl(200, 30%, 50%) -webkit-linear-gradient(-90deg, hsla(0, 0%, 100%, 0.5), hsla(0, 0%, 100%, 0.1) 50%)
  background hsl(200, 30%, 50%) -moz-linear-gradient(-90deg, hsla(0, 0%, 100%, 0.5), hsla(0, 0%, 100%, 0.1) 50%)
  color white
  text-shadow 0 -1px 0 hsla(0, 0%, 0%, 0.5)
  text-decoration none
  padding 5px 1ex
  border-radius 3px
  box-shadow inset 0 0 3px hsla(0, 0%, 0%, 0.2)
  &:active
    box-shadow inset 0 0 5px hsla(0, 0%, 0%, 0.6)

input[type=text], input[type=email]
  font-size large
  padding 2px 3px
  border-radius 2px
  border solid 1px hsla(0, 0%, 0%, 0.2)
  box-shadow inset 0px 0px 3px hsla(0, 0%, 0%, 0.2)
  margin 2px 0

p, ul
  margin 0.5em 0

p
  line-height 150%

ul
  list-style-type none
  padding-left 0

img.avatar
  vertical-align middle
  margin-right 5px
  border-radius 3px
  width 30px
  height 30px
img.via-github
  margin-bottom -4px

ul.errors
  color red

aside
  display block
  float right
  width 260px
  margin-top 20px
  .login
    text-align center
    a.button
      font-size medium
    .via
      font-size small
      margin-top 7px
  table.important-dates
    width 100%
    border-collapse collapse
    td
      text-align right
  ul.sponsors
    list-style-type none
    margin 2em 0 0
    padding 0
    text-align center
    // sponsor logo list: x-height = ~25px; leading  = ~70px
    img.joyent
      width 179px
      height 51px
      margin-bottom 14px
    img.github
      width 120px
      height 53px
      margin-bottom 10px
    img.heroku
      width 204px
      height 68px
    img.linode
      width 307px
      height 66px
      margin-left -22px
      margin-bottom 4px
    img.mongohq
      width 289px
      height 70px
      margin-bottom 7px
    img.nodejitsu
      width 185px
      height 50px
    img.pusher
      width 200px
      height 81px
    img.spreecast
      width 235px
      height 52px
      margin-top -3px
      margin-bottom 5px
    img.summercamp
      width 250px
      height 95px
    li.interested
      margin-top 15px

#page
  position relative
  width 900px
  margin 30px auto 0
  text-align left
  #inner
    background-color hsla(0, 0%, 100%, 0.9)
    border solid 1px hsla(0, 0%, 0%, 0.1)
    border-radius 2px
    box-shadow 0 0 5px hsla(0, 0%, 0%, 0.1)
    z-index 10000
    position relative
    padding 10px 20px
    width 580px
    header
      text-align center
      h1
        font-size x-large
        word-spacing -0.5ex
        a
          color black
          text-decoration none
        .ko
          background-color black
          color white
          text-shadow 0px 2px 0px hsla(0, 100%, 100%, 0.5)
          padding 8px 5px 5px 10px
          border-radius 2px
          border solid 1px hsla(0, 100%, 100%, 0.5)
      nav
        margin 1em 0
        border-bottom dotted 2px hsla(0, 0%, 0%, 0.2)
        a:link
          text-decoration none
        li
          display inline
          margin 0 1em

.thing
  position absolute
  .bubble
    position absolute
    left -15px
    width 294px - 20px - 21px
    max-height 133px - 21px - 42px
    border-image url('/images/734m/talkbubble1.png') 21 20 42 21
    border-width 21px 20px 42px 21px
    padding 5px
    display none
    text-align center
    overflow-y auto
    white-space pre-wrap
    line-height 125%
  ::-webkit-scrollbar
    width 1ex
  ::-webkit-scrollbar-thumb:vertical
    background-color hsla(0, 0%, 0%, 0.2)
  .textarea-container
    overflow hidden
    position relative
    height 1px
    width 1px
    textarea
      position absolute
      left -100px
      width 80px

#page.index-index
  text-align center
  header h1
    font-size xxx-large !important
    .ko
      padding 10px 10px 0 25px !important
  nav
    font-size large
  section
    margin 3em 0px
    p, ul
      margin 0.25em 0
    li
      display inline-block
      margin 0 1ex
  .dates
    font-size x-large
    margin 0.25em 0px
  #countdown, .now-what
    font-size medium
  a.register.button
