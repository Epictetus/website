!= partial('errors', { locals: { errors: team.errors }})

.name
  h3
    label( for: 'name' ) Name
  input( type: 'text', name: 'name', id: 'name', placeholder: 'Witty Team Name', value: team.name )

.members
  h3 Member Emails
  .note We don&rsquo;t spam.
  ol#members
    - for (var i = 1; i < 5; i++)
      li
        input.email( type: 'text', name: 'emails[]', value: team.emails()[i - 1], placeholder: 'member' + i + '@team.com' )
