.avatar-and-role
  img.avatar( src: avatar_url(person, 80) )
  .role= person.role

h1= title(person.name)
.details
  - if (person.company)
    .company!= markdown(person.company)
  - if (person.location && person.company)
    |  &mdash;
  - if (person.location)
    a.location( href: 'http://maps.google.com/?q=' + person.location )
      = person.location
  - if ((person.location || person.company) && (person.twitter_name || person.github_login))
    |  &mdash;
  - if (person.twitter_name || person.github_login)
    .icons
      - if (person.twitter)
        a.twitter( href: 'http://twitter.com/' + person.twitter_name )
          img( src: '/images/twitter.png' )
      - if (person.github_login)
        a.github( href: 'http://github.com/' + person.github_login )
          img( src: '/images/github.png' )

- if (team)
  h2.team
    | On
    a( href: '/teams/' + team.id )= team.name

.bio!= markdown(person.bio)

- if (canEdit(person))
  p: a.button( href: '/people/' + person.id + '/edit' ) Edit
